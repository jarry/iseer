//@Controller
public class AppSearchAction extends SimpleActionSupport {
    
    private static final long serialVersionUID = 1L;

    private String q;
    private List<App> resultList;
    
    @Resource
    private AppSearchService appSearchService;
    
    public AppSearchAction() {
        
    }

    public String execute() throws Exception {
        if (!StringUtils.isBlank(q)) {
            q = CharacterCodeUtils.iso2utf8(q.trim());
            resultList = appSearchService.getResultList(q);
        }
        return SUCCESS;
    }

    public String getQ() {
        return q;
    }

    public void setQ(String q) {
        this.q = q;
    }

    public List<App> getResultList() {
        return resultList;
    }

    public void setResultList(List<App> resultList) {
        this.resultList = resultList;
    }
    
}