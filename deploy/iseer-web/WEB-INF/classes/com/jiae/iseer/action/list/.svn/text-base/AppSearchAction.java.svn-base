package com.baidu.webos.action.app;

import java.util.List;

import javax.annotation.Resource;

import org.apache.commons.lang.StringUtils;
//import org.springframework.stereotype.Controller;

import com.baidu.webos.basic.action.SimpleActionSupport;
import com.baidu.webos.basic.utils.CharacterCodeUtils;
import com.baidu.webos.entity.app.App;
import com.baidu.webos.service.app.AppSearchService;
 
/**
 * ClassName: AppSearchAction
 * Function: AppSearch的action
 *
