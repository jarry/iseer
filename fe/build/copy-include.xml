<?xml version="1.0" encoding="utf-8"?>
<!--
function:
    1. copy including files of JS  to ${js-path} from ${js-src-path}

author: lichunping
mail: JarryLi@gmail.com 
-->
<project name="Jiae Include JS Files Copy" default="Copy JS" basedir=".">
        <property name="root-path" value="../.." />
    <property name="js-src-path" value="${root-path}/js-src" />
    <property name="js-path" value="${root-path}/webapp/js" />
        
           <target name="Copy JS" depends="">           
        <echo message="Delete ${js-path} Files Begin" />
                <!-- if the file exsiting delete first -->              
                <delete>
                         <fileset dir="${js-path}/" includes="**/*.js">
                            <!--<exclude name="core/**/*.*"/>-->
                        </fileset>
                </delete>
            <echo message="Delete ${js-path} Files End" />              
                
                
                        <echo message="Copy JS File Begin" />
                        <copy todir="${js-path}/">

                        <fileset dir="${js-src-path}/" includes="*.js"></fileset>
                        <!-- copy js file in all sub directory
                           <fileset dir="${js-src-path}/" includes="**/*.js"></fileset>
                        -->
                            <mapper type="glob" from="*.js" to="*.js" />
                        </copy>

                        <copy todir="${js-path}/">
                            <fileset dir="${js-src-path}/collect/" includes="*.js"></fileset>
                            <mapper type="glob" from="collect.js" to="collect.js" />
                        </copy>

                        <echo message="Copy JS File Finished" />
           </target>
 
</project>
